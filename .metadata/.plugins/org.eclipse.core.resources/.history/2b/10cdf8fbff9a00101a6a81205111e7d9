package com.aula01;

public class Condicional {
	public static void main(String[] args) {
	
		
		String nome = "Bayeuxalina";
		int idade = 5;
		String resultado;
		
		if(idade < 12) {
			resultado="Criança";
		}else {
			if(idade < 18) {
				resultado="Adolescente";
			}else {
				resultado="Adulto";
			}
		}	
		
		System.out.println(resultado);
		
		/*
		  Trabalhando com condicional  em java
		  0 a 11 anos criança
		  12 a 17 anos adolescente
		  18 acima adulto
		 */
	}
}
